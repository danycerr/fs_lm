# Solve a singular or non-singular problem
singularity = true        

# mesh name 
mesh_name=mesh/cube.msh
# mesh_name=sq2.msh
# In what dimension
dimension = 2 
# division of the square
ndiv =40

# With what elements ("tensor", "simplex")
element_type = tensor

# minimum approximation order
p_order =2

# Mesh refinement type: h, p, or hp
refinement_type = h 

# Number of uniform refinement steps
uniform_h_r_steps = 0

# Maximum number of adaptive refinement steps
max_adaptive_r_steps = 3

# Percentage of elements to refine at each step
refine_fraction = 0.8

# Percentage of elements to coarsen at each step
coarsen_fraction = 0.1

# Maximux h refinement level for an element
max_h_level = 9

# Penalty term, it ensures interior penalty formulation stability
ip_penalty = 20.
ip_penalty_int = 20.
ip_penalty_adj= 2000.


#friction model
mulim=-0.4
gamma=1.
alpha=0.00005
nmaxit=30
printstep=1
